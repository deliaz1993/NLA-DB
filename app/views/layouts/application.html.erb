<!DOCTYPE html>
<html>
<head>
  <title>NLA</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">NLA Demo</a>
    <ul class="nav">
      <li class="<%= 'active' if params[:controller] == 'students' %>"><%= link_to "Students", students_path%></li>
      <li class="<%= 'active' if params[:controller] == 'schools' %>"><%= link_to "Schools", schools_path%></li>
      <li class="<%= 'active' if params[:controller] == 'employees' %>"><%= link_to "Employees", employees_path%></li>

      <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Novanet<b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Register Student For Location", new_novanet_location_enrollment_path%></li>
                  <li><%= link_to "Register Student For Course", new_novanet_course_enrollment_path%></li>
                  <li class="divider"></li>
                  <li><%= link_to "Locations", novanet_locations_path%></li>
                  <li><%= link_to "Courses", novanet_courses_path%></li>
                </ul>
      </li>

    </ul>
  </div>
</div>

<%= yield %>

</body>
</html>
