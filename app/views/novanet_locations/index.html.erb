<%- model_class = NovanetLocation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th>Site Coordinator</th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @novanet_locations.each do |novanet_location| %>
      <tr>
        <td><%= link_to novanet_location.id, novanet_location_path(novanet_location) %></td>
        <td><%= novanet_location.name %></td>
        <td><%= novanet_location.address %></td>
        <td><%= novanet_location.employee.name %></td>
        <td><%=l novanet_location.created_at %></td>
        <td>
          <%= link_to "Show Students", {:controller => :students, :action => :list_by_school} , :class => 'btn btn-mini' %>

          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_novanet_location_path(novanet_location), :class => 'btn btn-mini' %>

          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      novanet_location_path(novanet_location),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_novanet_location_path,
            :class => 'btn' %>
